{
    "name": "justpos-admin-tool",
    "version": "1.0.0",
    "description": "License Manager for JustPos",
    "main": "electron/main.js",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "electron": "wait-on tcp:5174 && electron .",
        "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"cross-env BROWSER=none npm run electron\"",
        "rebuild": "electron-rebuild",
        "postinstall": "electron-rebuild",
        "dist": "npm run build && electron-builder"
    },
    "build": {
        "appId": "com.nadpos.admin",
        "productName": "NadPos License Manager",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "electron/**/*",
            "package.json",
            "private.pem"
        ],
        "asar": true,
        "asarUnpack": [
            "**/*.node"
        ],
        "win": {
            "target": "nsis",
            "icon": "resources/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true
        }
    },
    "keywords": [],
    "author": "Ares Boston Tech LLC",
    "license": "ISC",
    "dependencies": {
        "better-sqlite3": "^11.5.0",
        "clsx": "^2.1.0",
        "date-fns": "^3.3.1",
        "electron-log": "^5.0.3",
        "framer-motion": "^11.0.3",
        "lucide-react": "^0.344.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-dropzone": "^14.2.3",
        "tailwind-merge": "^2.2.1",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@electron/rebuild": "^3.7.2",
        "@types/react": "^18.2.64",
        "@types/react-dom": "^18.2.21",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.18",
        "concurrently": "^8.2.2",
        "cross-env": "^7.0.3",
        "electron": "^29.1.0",
        "electron-builder": "^24.13.3",
        "electron-rebuild": "^3.2.9",
        "png-to-ico": "^3.0.1",
        "png2icons": "^2.0.1",
        "postcss": "^8.4.35",
        "tailwindcss": "^3.4.1",
        "to-ico": "^1.1.5",
        "vite": "^5.1.5",
        "wait-on": "^7.2.0"
    }
}